__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::BtnSairClick(TObject *Sender)
{
    Close();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::BtnVerificarClick(TObject *Sender)
{
     band = 0;
	 String letra = EditLetra->Text;

	 char c = letra[1];
	 switch(c){
		case 'a':
		case 'e':
		case 'i':
		case 'o':
		case 'u':
			 ShowMessage("Você digitou uma letra Minuscula!!");
			 break;

		case 'A':
		case 'E':
		case 'I':
		case 'O':
		case 'U':
			 ShowMessage("Você digitou uma letra Maiúscula!!");
			 break;
	 default:
			 ShowMessage("Você não digitou uma letra!!")
     	;
	 }

	 EditLetra->Text = "";
     EditLetra->SetFocus();
}
//---------------------------------------------------------------------------


